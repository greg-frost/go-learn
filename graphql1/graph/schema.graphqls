# Дело для выполнения
type Todo {
	id: ID!
	text: String!
	done: Boolean!
	user: User!
}

# Пользователь
type User {
	id: ID!
	name: String!
}

# Время
type Time {
    unixTime: Int!
    timeStamp: String!
}

# Новое дело для выполнения
input NewTodo {
	text: String!
	userId: String!
}

# Запросы
type Query {
	todos: [Todo!]! # Список дел
}

# Мутации
type Mutation {
	createTodo(input: NewTodo!): Todo! # Добавление дела
}

# Подписки
type Subscription {
    tick: Time! # Тикер
}
