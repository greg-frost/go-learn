type Video {
    id: Num!
    name: String!
    description: String!
    user: User!
    url: String!
    genre: Genre
    createdAt: Timestamp!
}

type User {
    id: Int!
    name: String!
    email: String!
}

enum Genre {
    "Top videos"
    TOP
    "Educational videos"
    EDU
    "Documentary videos"
    DOC
    "Professional videos"
    PRO
    "Funny videos"
    FUN
}

input NewVideo {
    id: Num
    name: String!
    description: String!
    userId: Int!
    url: String!
    genre: Genre
}

type Query {
    video(id: Num!): Video
    videos(genre: Genre, limit: Int = 25, offset: Int = 0): [Video!]!
}

type Mutation {
    createVideo(input: NewVideo!): Video!
}

type Subscription {
    videoPublished: Video!
}

scalar Num
scalar Timestamp
